      crossorigin="anonymous"
    /> -->

    <link rel="stylesheet" href="../css/return-button.css" />
  </head>

  <body>
    <div class="reveal">
      <!-- <a href="../index.html" class="return-button-container"
        ><i class="far fa-arrow-alt-circle-left return-button"></i
      ></a> -->
      <div class="slides">
        <% if(contents&&title) { %> 
          <section>
            <% for(let i in title){ %>
              <h<%= +i+1 %>>
                <%= title[i] %>
              </h<%= +i+1 %>>
            <% } %>
          </section>
          <% for(let content of contents){ %>
            <section>
              <section>
                <% for(let sentence of content.japanese){ %>
                  <h2><%= sentence %></h2>
                <% } %>
              </section>
              <section>
                <% for(let sentence of content.english){ %>
                  <h2><%= sentence %></h2>
                <% } %>
              </section>
            </section>
          <% } %>
        <% } %>
      </div>
    </div>

    <script src="js/reveal.js"></script>
  </body>
</html>
